<Application x:Class="ManaHub.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ManaHub"
             xmlns:conv="clr-namespace:ManaHub.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <conv:StatsConverter x:Key="StatsConverter" />
            <conv:ColorConverter x:Key="ColorConverter" />
            <conv:ManaImageConverter x:Key="ManaImageConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
