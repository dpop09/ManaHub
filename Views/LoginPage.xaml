<UserControl x:Class="ManaHub.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManaHub.Views"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Assets/Iona-Shield-of-Emeria-MtG-Art.jpg" Stretch="UniformToFill" Opacity="0.75" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".25*"/>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width=".25*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height=".25*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".25*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Grid.Column="1"
		Background="#5B5B5B"
		Opacity=".9"
		Width="350"
		Height="200">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".3*"/>
                    <RowDefinition Height=".2*"/>
                    <RowDefinition Height=".2*"/>
                    <RowDefinition Height=".3*"/>
                </Grid.RowDefinitions>

                <Label
			Background="Transparent"
			Foreground="White"
			FontSize="25"
			VerticalAlignment="Top"
			HorizontalAlignment="Center">
                    Login
                </Label>
                <Grid Grid.Row="1" Margin="0,0,0,2.5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".3*"/>
                        <ColumnDefinition Width=".7*"/>
                    </Grid.ColumnDefinitions>

                    <Label
				Background="Transparent"
				Foreground="White"
				FontSize="15">
                        Username:
                    </Label>
                    <TextBox Grid.Column="1"
				FontSize="15">
                    </TextBox>
                </Grid>
                <Grid Grid.Row="2" Margin="0,2.5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".3*"/>
                        <ColumnDefinition Width=".7*"/>
                    </Grid.ColumnDefinitions>

                    <Label
				Background="Transparent"
				Foreground="White"
				FontSize="15">
                        Password:
                    </Label>
                    <TextBox Grid.Column="1"
				FontSize="15">
                    </TextBox>
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Width="100" Height="30" VerticalAlignment="Bottom"
                        Content="Login"
                        Command="{Binding ExecuteLoginCommand}"/>
                    <Button Grid.Column="1" Width="100" Height="30" VerticalAlignment="Bottom"
                        Content="Create Account"
                        Command="{Binding GoToCreateAccountPageCommand}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
