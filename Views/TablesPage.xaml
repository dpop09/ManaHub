<UserControl x:Class="ManaHub.Views.TablesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManaHub.Views"
        mc:Ignorable="d"
        d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="White">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Click button to start a new match." />
            <Button Width="80" Margin="10" Content="New Match" Command="{Binding GoToGamePageCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
