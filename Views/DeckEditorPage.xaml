                        <DataGridTextColumn.Binding>
                            <Binding Path="ColorsString" Converter="{StaticResource ColorConverter}"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Type" Binding="{Binding TypeLine}" Width="*" />
