                                <Binding Path="Toughness" />
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Rarity" Binding="{Binding Rarity}" Width="*" />
