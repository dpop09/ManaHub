                        <CheckBox Content="Unique" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock VerticalAlignment="Center" Text="Card count:" Margin="0,0,2,0"/>
                        <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="{Binding CardCount}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
