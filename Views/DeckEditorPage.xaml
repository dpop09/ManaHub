<UserControl x:Class="ManaHub.Views.DeckEditorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManaHub.Views"
        mc:Ignorable="d"
        d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".15*" />
            <ColumnDefinition Width=".85*" />
        </Grid.ColumnDefinitions>
        
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0,0,1,0">
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".5*" />
                    <RowDefinition Height=".5*" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Label FontSize="10" Content="Deck Name:"/>
                    <TextBlock Width="50"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredCards}" AutoGenerateColumns="False" IsReadOnly="True" 
                        CanUserResizeColumns="True" Background="White" BorderThickness="0" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                    <DataGridTextColumn Header="Mana" Binding="{Binding ManaCost}" Width="*" />
                    <DataGridTextColumn Header="Type" Binding="{Binding TypeLine}" Width="*" />
                    <DataGridTextColumn Header="Stats" Width="*" >
                        <DataGridTextColumn.Binding>
                            <MultiBinding Converter="{StaticResource StatsConverter}">
                                <Binding Path="Power" />
                                <Binding Path="Toughness" />
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Rarity" Binding="{Binding Rarity}" Width="*" />
                    <DataGridTextColumn Header="Set" Binding="{Binding Set}" Width="*" />
                    <DataGridTextColumn Header="Card Number" Binding="{Binding CollectorNumber}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
            <Border Grid.Row="2" Background="LightGray" BorderBrush="Black" BorderThickness="0,1,0,1" Padding="10,5,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBox Width="250" Height="20" FontSize="12" Margin="0,0,5,0" />
                    <Button Content="Search" Height="20" FontSize="12" Margin="0,0,5,0"/>
                    <Button Content="Clear" Height="20" FontSize="12" Margin="0,0,20,0"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox Content="Names" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <CheckBox Content="Types" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <CheckBox Content="Rules" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <CheckBox Content="Unique" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock VerticalAlignment="Center" Text="Card count:" Margin="0,0,2,0"/>
                        <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="{Binding CardCount}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
