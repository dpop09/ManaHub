<UserControl x:Class="ManaHub.Views.DeckEditorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManaHub.Views"
        xmlns:svg="clr-namespace:SharpVectors.Converters;assembly=SharpVectors.Converters.Wpf"
        xmlns:conv="clr-namespace:ManaHub.Converters"
        mc:Ignorable="d"
        d:DesignHeight="720" d:DesignWidth="1280">
    <UserControl.Resources>
        <conv:CardToVisibilityConverter x:Key="CardToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0,0,1,0">
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="315" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="5">
                    <Label FontSize="10" Content="Deck Name:"/>
                    <TextBlock Text="New Deck" VerticalAlignment="Center" FontSize="10" FontWeight="Bold"/>
                </StackPanel>
                <Grid Grid.Row="1" Visibility="{Binding CardDisplayVM.CardDisplay, Converter={StaticResource CardToVisibilityConverter}}">
                    <local:CardDisplay DataContext="{Binding CardDisplayVM}" />
                </Grid>
            </Grid>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="LightGray">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2.5" VerticalAlignment="Top">
                        <ToggleButton Width="20" Height="20" Background="Red" Content="R" Margin="0,0,4,0" />
                        <ToggleButton Width="20" Height="20" Background="Green" Content="G" Margin="0,0,4,0" />
                        <ToggleButton Width="20" Height="20" Background="Blue" Content="U" Margin="0,0,4,0" />
                        <ToggleButton Width="20" Height="20" Background="Black" Foreground="White" Content="B" Margin="0,0,4,0" />
                        <ToggleButton Width="20" Height="20" Background="White" Content="W" Margin="0,0,4,0" />
                        <ToggleButton Width="20" Height="20" Background="LightGray" Content="C" Margin="0,0,4,0" />
                        <ComboBox Height="20" Width="200" Foreground="White">
                            <ComboBoxItem Content="Option 1" />
                            <ComboBoxItem Content="Option 2" />
                            <ComboBoxItem Content="Option 3" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="2.5" VerticalAlignment="Top">
                        <ToggleButton Width="20" Height="20" Background="White" Margin="0,0,4,0" ToolTip="Lands">
                            <svg:SvgViewbox UriSource="pack://application:,,,/ManaHub;component/Assets/Types/land.svg" />
                        </ToggleButton>
                        <ToggleButton Width="20" Height="20" Background="White" Margin="0,0,4,0" ToolTip="Creatures">
                            <svg:SvgViewbox UriSource="pack://application:,,,/ManaHub;component/Assets/Types/creature.svg" />
                        </ToggleButton>
                        <ToggleButton Width="20" Height="20" Background="White" Margin="0,0,4,0" ToolTip="Artifacts">
                            <svg:SvgViewbox UriSource="pack://application:,,,/ManaHub;component/Assets/Types/artifact.svg" />
                        </ToggleButton>
                        <ToggleButton Width="20" Height="20" Background="White" Margin="0,0,4,0" ToolTip="Sorceries">
                            <svg:SvgViewbox UriSource="pack://application:,,,/ManaHub;component/Assets/Types/sorcery.svg" />
                        </ToggleButton>
                        <ToggleButton Width="20" Height="20" Background="White" Margin="0,0,4,0" ToolTip="Instants">
                            <svg:SvgViewbox UriSource="pack://application:,,,/ManaHub;component/Assets/Types/instant.svg" />
                        </ToggleButton>
                        <ToggleButton Width="20" Height="20" Background="White" Margin="0,0,4,0" ToolTip="Enchantments">
                            <svg:SvgViewbox UriSource="pack://application:,,,/ManaHub;component/Assets/Types/enchantment.svg" />
                        </ToggleButton>
                        <ToggleButton Width="20" Height="20" Background="White" Margin="0,0,4,0" ToolTip="Planeswalkers">
                            <svg:SvgViewbox UriSource="pack://application:,,,/ManaHub;component/Assets/Types/planeswalker.svg" />
                        </ToggleButton>
                        <ToggleButton Width="20" Height="20" Background="White" Margin="0,0,4,0" ToolTip="Battles">
                            <svg:SvgViewbox UriSource="pack://application:,,,/ManaHub;component/Assets/Types/battle.svg" />
                        </ToggleButton>
                    </StackPanel>
                </Grid>
                <DataGrid x:Name="CollectionGrid" Grid.Row="1" ItemsSource="{Binding FilteredCards}" SelectedItem="{Binding CardDisplayVM.CardDisplay}" 
                          AutoGenerateColumns="False" IsReadOnly="True" CanUserResizeColumns="True" Background="White" 
                          BorderThickness="0" SelectionMode="Single">
                    <DataGrid.InputBindings>
                        <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding AddToDeckCommand}" 
                                      CommandParameter="{Binding SelectedItem, ElementName=CollectionGrid}" />
                        <MouseBinding MouseAction="RightDoubleClick" Command="{Binding AddToSideboardCommand}" 
                                      CommandParameter="{Binding SelectedItem, ElementName=CollectionGrid}" />
                    </DataGrid.InputBindings>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                        <DataGridTemplateColumn Header="Cost" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding ManaCost, Converter={StaticResource SymbolToImageConverter}}" 
                                  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <svg:SvgViewbox UriSource="{Binding}" Width="14" Height="14" Margin="1,0"
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Color" Width="*" >
                            <DataGridTextColumn.Binding>
                                <Binding Path="ColorsString" Converter="{StaticResource ColorConverter}"/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Type" Binding="{Binding TypeLine}" Width="*" />
                        <DataGridTextColumn Header="Stats" Width="*" >
                            <DataGridTextColumn.Binding>
                                <MultiBinding Converter="{StaticResource StatsConverter}">
                                    <Binding Path="Power" />
                                    <Binding Path="Toughness" />
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Rarity" Binding="{Binding Rarity}" Width="*" />
                        <DataGridTextColumn Header="Set" Binding="{Binding Set}" Width="*" />
                        <DataGridTextColumn Header="Card Number" Binding="{Binding CollectorNumber}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
                <Border Grid.Row="2" Background="LightGray" BorderBrush="Black" BorderThickness="0,1,0,1" Padding="10,5,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBox Width="250" Height="20" FontSize="12" Margin="0,0,5,0" />
                        <Button Content="Search" Height="20" FontSize="12" Margin="0,0,5,0"/>
                        <Button Content="Clear" Height="20" FontSize="12" Margin="0,0,20,0"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <CheckBox Content="Names" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <CheckBox Content="Types" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <CheckBox Content="Rules" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <CheckBox Content="Unique" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock VerticalAlignment="Center" Text="Card count:" Margin="0,0,2,0"/>
                            <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="{Binding CardCount}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <GridSplitter Grid.Row="1" Height="5" Background="#a3a3a3"
                          HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".6*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width=".4*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock VerticalAlignment="Center" Text="Maindeck - " Margin="3,0,0,0"/>
                            <TextBlock VerticalAlignment="Center" Text="{Binding MainDeckCardCount}"/>
                        </StackPanel>
                    </StackPanel>
                    <DataGrid x:Name="MainDeckGrid" Grid.Row="1" ItemsSource="{Binding DeckList}" AutoGenerateColumns="False" IsReadOnly="True" 
                              CanUserResizeColumns="True" Background="White" BorderThickness="0" SelectionMode="Single">
                        <DataGrid.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding RemoveFromDeckCommand}" 
                                          CommandParameter="{Binding SelectedItem, ElementName=MainDeckGrid}" />
                            <MouseBinding MouseAction="RightDoubleClick" Command="{Binding MoveCardFromMainDeckToSideboardCommand}"
                                          CommandParameter="{Binding SelectedItem, ElementName=MainDeckGrid}" />
                        </DataGrid.InputBindings>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                            <DataGridTemplateColumn Header="Cost" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ItemsControl ItemsSource="{Binding ManaCost, Converter={StaticResource SymbolToImageConverter}}" 
                                                      HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <svg:SvgViewbox UriSource="{Binding}" Width="14" Height="14" Margin="1,0" 
                                                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Color" Width="*" >
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ColorsString" Converter="{StaticResource ColorConverter}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"
                              VerticalAlignment="Stretch" Background="#a3a3a3"/>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock VerticalAlignment="Center" Text="Sideboard - " Margin="3,0,0,0"/>
                            <TextBlock VerticalAlignment="Center" Text="{Binding SideboardCardCount}"/>
                        </StackPanel>
                    </StackPanel>
                    <DataGrid x:Name="SideboardGrid" Grid.Row="1" ItemsSource="{Binding SideboardList}" AutoGenerateColumns="False" 
                              IsReadOnly="True" CanUserResizeColumns="True" Background="White" BorderThickness="0" SelectionMode="Single">
                        <DataGrid.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding RemoveFromSideboardCommand}"
                                          CommandParameter="{Binding SelectedItem, ElementName=SideboardGrid}" />
                            <MouseBinding MouseAction="RightDoubleClick" Command="{Binding MoveCardFromSideboardToMainDeckCommand}"
                                          CommandParameter="{Binding SelectedItem, ElementName=SideboardGrid}" />
                        </DataGrid.InputBindings>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                            <DataGridTemplateColumn Header="Cost" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ItemsControl ItemsSource="{Binding ManaCost, Converter={StaticResource SymbolToImageConverter}}" 
                                                      HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <svg:SvgViewbox UriSource="{Binding}" Width="14" Height="14" Margin="1,0" 
                                                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Color" Width="*" >
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ColorsString" Converter="{StaticResource ColorConverter}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
