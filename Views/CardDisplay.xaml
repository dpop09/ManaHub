<UserControl x:Class="ManaHub.Views.CardDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ManaHub.Views"
             mc:Ignorable="d" 
             d:DesignHeight="315" d:DesignWidth="225">

    <Border BorderBrush="#111111" BorderThickness="5" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#444444"  Padding="5" CornerRadius="12,12,0,0">
                <StackPanel Orientation="Vertical">
                    <Grid>
                        <TextBlock HorizontalAlignment="Left" Text="Dragonlord Atarka" 
                            Foreground="White" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Right" Text="{}{5}{R}{G}" 
                            Foreground="White" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid>
                        <TextBlock HorizontalAlignment="Left" Text="Legendary Creature — Elder Dragon" 
                            Foreground="White" FontStyle="Italic" FontSize="10" VerticalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Right" Text="DTK" 
                            Foreground="#FFD700" FontWeight="Bold" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Background="#444444" CornerRadius="0,0,12,12" Padding="10">
                <Grid>
                    <TextBlock TextWrapping="Wrap" Foreground="White" FontSize="11" LineHeight="10">
                        Flying, trample <LineBreak/>
                        When Dragonlord Atarka enters, it deals 5 damage divided as you choose among any number of target creatures or planeswalkers your opponents control.
                    </TextBlock>

                    <Border VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                            Background="#AAAAAA" CornerRadius="12,0,12,0" 
                            Padding="8,4" Margin="-10,-10">
                        <TextBlock Text="8 / 8" FontWeight="Bold" FontSize="11" Foreground="Black"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>